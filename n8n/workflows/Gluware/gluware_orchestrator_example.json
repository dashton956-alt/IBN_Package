            {
              "name": "body",
              "value": "={{ JSON.stringify({ deviceId: $json.deviceId, scanAll: false }) }}"
            }
          ]
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition-1",
              "leftValue": "={{ $json.success }}",
              "rightValue": true,
