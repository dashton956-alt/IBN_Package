{
  "name": "Syslog - Config Change Detection",
  "nodes": [
    {
      "parameters": {
        "topic": "device-events",
        "groupId": "n8n-config-changes",
        "brokers": "kafka:9092",
        "options": {
          "sessionTimeout": 30000,
          "allowAutoTopicCreation": false
